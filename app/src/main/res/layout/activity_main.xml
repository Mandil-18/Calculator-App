<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/Result"
        android:textColor="@color/white"
        android:layout_gravity="end"
        android:ellipsize="end"
        android:singleLine="true"
        android:textAlignment="textEnd"
        android:textSize="50sp"
        tools:text="0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Clear"
                style="@style/ActionButton"
                android:backgroundTint="@color/actionButton"
                android:text="CLEAR"/>
            <Button
                android:id="@+id/Divide"
                style="@style/ActionButton"
                android:backgroundTint="@color/actionButton"
                android:text="/"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Seven"
                style="@style/NumberButton"
                android:text="7"/>
            <Button
                android:id="@+id/Eight"
                style="@style/NumberButton"
                android:text="8"/>
            <Button
                android:id="@+id/Nine"
                style="@style/NumberButton"
                android:text="9"/>
            <Button
                android:id="@+id/Multiplication"
                style="@style/OperatorButton"
                android:backgroundTint="@color/operators"
                android:text="*"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Four"
                style="@style/NumberButton"
                android:text="4"/>
            <Button
                android:id="@+id/Five"
                style="@style/NumberButton"
                android:text="5"/>
            <Button
                android:id="@+id/Six"
                style="@style/NumberButton"
                android:text="6"/>
            <Button
                android:id="@+id/Minus"
                style="@style/OperatorButton"
                android:backgroundTint="@color/operators"
                android:text="-"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/One"
                style="@style/NumberButton"
                android:text="1"/>
            <Button
                android:id="@+id/Two"
                style="@style/NumberButton"
                android:text="2"/>
            <Button
                android:id="@+id/Three"
                style="@style/NumberButton"
                android:text="3"/>
            <Button
                android:id="@+id/Add"
                style="@style/OperatorButton"
                android:backgroundTint="@color/operators"
                android:text="+"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Dot"
                style="@style/NumberButton"
                android:text="."/>
            <Button
                android:id="@+id/Zero"
                style="@style/NumberButton"
                android:text="0"/>
            <Button
                android:id="@+id/Back"
                style="@style/NumberButton"
                android:text="DEL"/>
            <Button
                android:id="@+id/Equals"
                style="@style/EqualButton"
                android:backgroundTint="@color/equalButton"
                android:text="="/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>